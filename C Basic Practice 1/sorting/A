#include <stdio.h>
int swap();
short int n=0,numSwaps_in_func=0;
int main() {
    int numSwaps=0;

    scanf("%hd", &n);
if(n>=2 && n<=600){
     int a[n];
    for (int i=0; i<n; i++){
    scanf("%d", &a[i]);
    }
  for (int i = 0; i < n; i++) {
    
    for (int j = 0; j < n-1; j++) {
       
        if (a[j] > a[j+1]) {
            numSwaps=swap(&a[j], &a[j + 1]);
        }
    }
    
}
    printf("\nArray is sorted in %hd swaps.", numSwaps);
    printf("\nFirst Element: %d", a[0]);
    printf("\nLast Element: %d", a[n-1]);
}
    return 0;
}

int swap(int *a1, int *a2){

int temp;
            temp = *a1;
            *a1 = *a2;
            *a2 = temp;
            numSwaps_in_func++;
            return numSwaps_in_func;
}






