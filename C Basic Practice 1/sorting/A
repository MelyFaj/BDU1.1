#include <stdio.h>

int main() {
    short int n,num_swaps;
    short int i;
    scanf("%hd", &n);
     int a[n];
    for (i=0; i<n; i++){
    scanf("%d", &a[i]);
    }
  for (int i = 0; i < n; i++) {
    
    for (int j = 0; j < i+1; j++) {
       
        if (a[j] > a[i]) {
            int temp;
            temp = a[i];
            a[i] = a[j];
            a[j] = temp;
            num_swaps++;
        }
       /* for (int x=0; x<n; x++){
    printf("%d ", a[x]);}
    printf(", i=%d, j=%d \n", i,j);*/
    }
    
} /*printf("\n\n");
for (i=0; i<n; i++){
    printf("%d ", a[i]);}*/
    printf("\nArray is sorted in %hd swaps.", num_swaps);
